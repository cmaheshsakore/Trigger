<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="-1dp">
                <shape>
                    <gradient
                        android:startColor="#ffffff"
                        android:endColor="#e7e5e6"
                        android:angle="90" />
                    <stroke
                        android:width="1dp"
                        android:color="#bebebe" />
                    <corners
                        android:topRightRadius="4dp"
                        android:bottomRightRadius="4dp" />
                    <padding
                        android:top="4dp"
                        android:right="8dp"
                        android:bottom="4dp"
                        android:left="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="-1dp">
                <shape>
                    <gradient
                        android:startColor="#ffffff"
                        android:endColor="#e7e5e6"
                        android:angle="-90" />
                    <stroke
                        android:width="1dp"
                        android:color="#bebebe" />
                    <corners
                        android:topRightRadius="4dp"
                        android:bottomRightRadius="4dp" />
                    <padding
                        android:top="4dp"
                        android:right="8dp"
                        android:bottom="4dp"
                        android:left="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>