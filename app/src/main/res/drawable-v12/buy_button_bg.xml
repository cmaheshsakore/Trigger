<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:right="-5dp">
                <shape>
                    <gradient
                        android:startColor="#4189f8"
                        android:endColor="#3374dc"
                        android:angle="90" />
                    <stroke
                        android:width="1dp"
                        android:color="#FF366dc9" />
                    <corners
                        android:topLeftRadius="4dp"
                        android:topRightRadius="0dp"
                        android:bottomRightRadius="0dp"
                        android:bottomLeftRadius="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:right="-5dp">
        <shape>
            <gradient
                android:startColor="#4189f8"
                android:endColor="#3374dc"
                android:angle="-90" />
            <stroke
                android:width="1dp"
                android:color="#FF366dc9" />
            <corners
                android:topLeftRadius="4dp"
                android:topRightRadius="0dp"
                android:bottomRightRadius="0dp"
                android:bottomLeftRadius="4dp" />
        </shape>
            </item>
    </layer-list>
    </item>
</selector>