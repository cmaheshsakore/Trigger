<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <!-- Start Configure new SSID and Connect -->

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/Option006"
        style="@style/ActionNoMarginPadded"
        android:layout_marginBottom="10dp" 
        android:stretchColumns="1" >

        <TextView
            style="@style/ConfigurationActionHeading"
            android:text="@string/layoutWifiConfigureSSIDText" />

        <View style="@style/SpacerBGNoPadding" />

        <TableRow android:layout_marginBottom="0sp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:gravity="center_vertical"
                android:paddingLeft="10sp"
                android:shadowRadius="2.75"
                android:singleLine="true"
                android:text="@string/layoutWifiSSIDText"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/TextColor"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/entrySSIDSSID"
                style="@style/EditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:scrollHorizontally="true"
                android:scrollbars="horizontal"
                android:text="" />
        </TableRow>
        
        <TableRow>
            <TextView
                android:layout_height="0dp"
                android:layout_width="0dp" />
            <CheckBox
            android:id="@+id/hiddenSSID"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/TextColor"
            android:textSize="@dimen/TextSizeOne"
            android:text="@string/layoutWifiHiddenSSID" />
        </TableRow>
        
        <TableRow android:layout_marginBottom="0sp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:gravity="center_vertical"
                android:paddingLeft="10sp"
                android:shadowRadius="2.75"
                android:singleLine="true"
                android:text="@string/layoutWifiAuthTypeText"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/TextColor"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/SSIDAuthType"
                style="@style/AddSelect"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:prompt="@string/AuthTogglePrompt" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:gravity="center_vertical"
                android:paddingLeft="10sp"
                android:shadowRadius="2.75"
                android:singleLine="true"
                android:text="@string/layoutWifiAuthKeyText"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/TextColor"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/entrySSIDKey"
                style="@style/EditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:scrollHorizontally="true"
                android:scrollbars="horizontal"
                android:text="" />
        </TableRow>

    </TableLayout>

</ScrollView><!-- End Configure new SSID and Connect -->
