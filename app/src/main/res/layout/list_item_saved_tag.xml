<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_clickable"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp" >

        <LinearLayout
            android:id="@+id/name_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:fontFamily="sans-serif-condensed"
                android:text="Sample Text"
                android:textSize="@dimen/TextSizeFour"/>

            <ImageView
                android:id="@+id/separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:src="@drawable/ic_action_rotate"
                android:visibility="gone" />

            <TextView
                android:id="@+id/name_alt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:singleLine="true"
                android:textColor="@color/highlight_green"
                android:textSize="@dimen/TextSizeFour"
                android:fontFamily="sans-serif-condensed"
                android:visibility="gone" />

            </LinearLayout>


        <ImageButton
            android:id="@+id/more"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:gravity="bottom|right"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="20dp"
            android:src="@drawable/ic_training_dots_normal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/name_container"
            android:layout_below="@id/name_container"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:paddingRight="16dp" >

            <TextView
                android:id="@+id/actions_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/no_actions"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/highlight_yellow" />

            <LinearLayout
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/actions_title"
                android:gravity="center_vertical|start"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp" >

                <ImageView
                    android:id="@+id/icon_nfc"
                    android:layout_width="@dimen/task_list_type_icon_size"
                    android:layout_height="@dimen/task_list_type_icon_size"
                    android:src="@drawable/ic_action_tag_green" />

                <ImageView
                    android:id="@+id/icon_wifi"
                    android:layout_width="@dimen/task_list_type_icon_size"
                    android:layout_height="@dimen/task_list_type_icon_size"
                    android:src="@drawable/ic_action_wifi_green" />

                <ImageView
                    android:id="@+id/icon_bluetooth"
                    android:layout_width="@dimen/task_list_type_icon_size"
                    android:layout_height="@dimen/task_list_type_icon_size"
                    android:src="@drawable/ic_action_bluetooth_green" />

                <ImageView
                    android:id="@+id/icon_geofence"
                    android:layout_width="@dimen/task_list_type_icon_size"
                    android:layout_height="@dimen/task_list_type_icon_size"
                    android:src="@drawable/ic_action_globe_green" />

                <ImageView
                    android:id="@+id/icon_battery"
                    android:layout_width="@dimen/task_list_type_icon_size"
                    android:layout_height="@dimen/task_list_type_icon_size"
                    android:src="@drawable/ic_action_battery_green" />

                <ImageView
                    android:id="@+id/icon_time"
                    android:layout_width="@dimen/task_list_type_icon_size"
                    android:layout_height="@dimen/task_list_type_icon_size"
                    android:src="@drawable/ic_action_clock_green" />

                <ImageView
                    android:id="@+id/icon_charger"
                    android:layout_width="@dimen/task_list_type_icon_size"
                    android:layout_height="@dimen/task_list_type_icon_size"
                    android:src="@drawable/ic_action_plug_green" />

                <ImageView
                    android:id="@+id/icon_headset"
                    android:layout_width="@dimen/task_list_type_icon_size"
                    android:layout_height="@dimen/task_list_type_icon_size"
                    android:src="@drawable/ic_action_headphones_green" />

                <ImageView
                    android:id="@+id/icon_calendar"
                    android:layout_width="@dimen/task_list_type_icon_size"
                    android:layout_height="@dimen/task_list_type_icon_size"
                    android:src="@drawable/ic_action_calendar_month_green" />

                <ImageView
                    android:id="@+id/icon_agent"
                    android:layout_width="@dimen/task_list_type_icon_size"
                    android:layout_height="@dimen/task_list_type_icon_size"
                    android:src="@drawable/ic_category_agent_green" />

                <ImageView
                    android:id="@+id/icon_manual"
                    android:layout_width="@dimen/task_list_type_icon_size"
                    android:layout_height="@dimen/task_list_type_icon_size"
                    android:src="@drawable/ic_manual" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/description_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/actions_title"
                android:layout_below="@id/actions_title"
                android:orientation="vertical"
                android:paddingTop="2dp" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/highlight_yellow" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Sample actions"
                    android:paddingRight="4dp"
                    android:paddingTop="4dp"
                    android:singleLine="false" />
            </LinearLayout>

            <TextView
                android:id="@+id/last_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/actions_title"
                android:layout_below="@id/description_container"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical|start"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:textColor="#666666"
                android:textSize="@dimen/TextSizeSmall" />
        </RelativeLayout>
    </RelativeLayout>

    <!-- Delete confirmation -->

    <LinearLayout
        android:id="@+id/deleted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#44cccccc"
        android:orientation="horizontal"
        android:padding="16dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/task_deleted"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/undo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/list_clickable"
            android:drawableLeft="@drawable/ic_action_undo"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="@string/undo"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>