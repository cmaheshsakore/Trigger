<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BGColor"
    android:padding="@dimen/keyline_exterior"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/aboutIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/aboutTextHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/aboutIcon"
        android:layout_toRightOf="@id/aboutIcon"
        android:paddingLeft="8dp"
        android:text=""
        android:textColor="@color/TextColor"
        android:textSize="@dimen/list_item_text_main" />

    <TextView
        android:id="@+id/aboutText"
        style="@style/PreferenceTitleSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/aboutIcon"
        android:layout_below="@id/aboutIcon"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="@color/TextColor"
        android:textSize="@dimen/list_item_text_detail" />

</RelativeLayout>