<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ListHeader">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/list_item_padding</item>
        <item name="android:paddingRight">@dimen/list_item_padding</item>
        <item name="android:paddingTop">@dimen/list_item_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/divider_orange</item>
    </style>
    
    <style name="ListHeaderText">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/list_heading_font_color</item>
        <item name="android:paddingLeft">@dimen/list_item_inner_padding</item>
        <item name="android:paddingRight">@dimen/list_item_inner_padding</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

</resources>