<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="EditText">
        <!-- Don't override background -->
    </style>

    <style name="AddSelect">
        <!-- Don't override background -->
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonBar" >
        <item name="android:background">#ededed</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="ConfigurationActionHeading">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:textSize">@dimen/TextSizeSix</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="ConfigurationActionSubText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:textSize">@dimen/TextSizeOne</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="CustomActionButtonImage">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ListHeaderDivider">
        <item name="android:background">@color/list_header_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
    </style>

    <style name="ListHeader">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/list_item_padding</item>
        <item name="android:paddingLeft">@dimen/list_item_padding</item>
        <item name="android:paddingRight">@dimen/list_item_padding</item>
        <item name="android:paddingBottom">@dimen/list_heading_padding_small</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="ListHeaderText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/list_header_color</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    
    <style name="ListTextContainer">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/list_item_padding</item>
        <item name="android:paddingRight">@dimen/list_item_padding</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">@dimen/list_item_inner_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PreferencesSwitch">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingLeft">@dimen/keyline_exterior</item>
        <item name="android:paddingRight">@dimen/keyline_exterior</item>
        <item name="android:textSize">@dimen/list_item_text_main</item>
    </style>

    <style name="TimeNotSelected">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/time_unselected</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/list_selector</item>
    </style>
    
    <style name="TimeSelected">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/list_selector</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ConstraintText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ConstraintConditionText">
        <item name="android:textSize">14sp</item>
        <item name="android:buttonTint">@color/primary_dark</item>
        <item name="android:checkMarkTint">@color/primary_dark</item>
    </style>

    <style name="ConstraintHeading">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:background">#e7e7e7</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="WelcomeBanner">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/white_box</item>
        <item name="android:padding">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WelcomeBannerHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/TextSizeFour</item>
        <item name="android:text">@string/welcome</item>
    </style>

    <style name="FlatButton">
        <item name="android:background">@drawable/flat_button_bg</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="WelcomeButton" parent="@style/FlatButton">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    
    <style name="WelcomeBannerCloseButton" parent="FlatButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#666</item>
        <item name="android:text">Ã—</item>
    </style>

    <style name="WelcomeBannerVerticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="WelcomeBannerText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>
    
    <style name="ProgressBar.Nfctl" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light</item>
      <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_holo_light</item>
    </style>
    
    <style name="CardBase">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    
    <style name="CardTextOnly" parent="@style/CardBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:padding">12sp</item>
        <item name="android:background">@drawable/card_help</item>
    </style>
    
    <style name="CardText" parent="@style/CardBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="CardHelpBase" parent="@style/CardBase">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="CardHelpTextOnly" parent="@style/CardHelpBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:padding">12sp</item>
        <item name="android:background">@drawable/card_help</item>
    </style>
    
    <style name="CardHelpText" parent="@style/CardHelpBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="CardHelpContainer" parent="@style/CardHelpBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:padding">12sp</item>
        <item name="android:background">@drawable/card_help</item>
    </style>
    
    <style name="CardContainer">
        <item name="android:layout_margin">12dp</item>
        <item name="android:padding">12sp</item>
        <item name="android:background">@drawable/card</item>
    </style>
    
    <style name="buy_tags_button">
        <item name="android:background">@drawable/button_light_clickable</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:drawableLeft">@drawable/payment_mark_light</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:text">@string/write_free_tags</item>
    </style>

    <style name="ConstraintContainer">
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    
    <style name="ConstraintContainerText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/list_item_text_main</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ExampleDialogContainer">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="FakeButton">
        <item name="android:background">@drawable/button_clickable</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WalletText">
        <item name="android:textColor">@color/TextColor</item>
    </style>

    <style name="popupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#E8F5E9</item>
        <item name="android:popupAnimationStyle">@style/AnimationPopup</item>
        <item name="android:divider">#eeeeee</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="AnimationPopup">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="PopupSmallTextAppearance" parent="@style/Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/list_item_text_main</item>
    </style>

    <style name="PopupLargeTextAppearance" parent="@style/Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/list_item_text_main</item>
    </style>

    <style name="material_button">
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="material_button_flat" parent="material_button">
        <item name="android:textColor">@color/button_flat</item>
        <item name="android:background">@drawable/list_selector</item>
        <item name="android:elevation">0dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="material_button_flat_dark" parent="material_button_flat">
        <item name="android:textColor">@color/button_flat_dark</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/grey_300</item>
        <item name="android:elevation">6dp</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_navigation_arrow_back_white</item>
        <item name="homeAsUpIndicator">@drawable/ic_action_navigation_arrow_back_white</item>
    </style>

    <style name="ToolbarStyle.Transparent" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_navigation_arrow_back_white</item>
        <item name="homeAsUpIndicator">@drawable/ic_action_navigation_arrow_back_white</item>
    </style>

</resources>